    <script>
        // JavaScript to toggle the chatbot window visibility
        const chatbotIcon = document.getElementById('chatbot-icon');
        const chatbotWindow = document.getElementById('chatbot-window');
        const chatbotClose = document.getElementById('chatbot-close');

        // Open the chatbot window when the icon is clicked
        chatbotIcon.addEventListener('click', function() {
            chatbotWindow.style.display = 'block'; // Show the chatbot window
        });

        // Close the chatbot window when the close button is clicked
        chatbotClose.addEventListener('click', function() {
            chatbotWindow.style.display = 'none'; // Hide the chatbot window
        });
