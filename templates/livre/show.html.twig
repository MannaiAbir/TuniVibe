{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <main>
        <!-- En-tête de la page -->
        <header class="site-header d-flex flex-column justify-content-center align-items-center">
            <div class="container">
                <div class="row justify-content-center align-items-center">
                    <div class="col-lg-5 col-12 mb-5">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('app_livre_index') }}">Bibliothèque</a></li>
                                <li class="breadcrumb-item active" aria-current="page">{{ livre.titre }}</li>
                            </ol>
                        </nav>

                        <h2 class="text-white">{{ livre.titre }}</h2>

                        <div class="d-flex align-items-center mt-5">
                            <a href="#livre-details" class="btn custom-btn custom-border-btn smoothscroll me-4">En savoir plus</a>
                            <a href="#top" class="custom-icon bi-bookmark smoothscroll"></a>
                        </div>
                    </div>

                    <div class="col-lg-5 col-12">
                        <div class="topics-detail-block bg-white shadow-lg">
                            {% if livre.imageCouverture %}
                                <img src="{{ asset('uploads/images/' ~ livre.imageCouverture) }}" class="topics-detail-block-image img-fluid" alt="Cover Image">
                            {% else %}
                                <div class="topics-detail-block-image img-fluid bg-light d-flex align-items-center justify-content-center">
                                    <p class="text-muted">Aucune image</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Section des détails du livre -->
        <section class="book-details-section section-padding" id="livre-details">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-12">
                        <div class="book-details-box">
                            <h3 class="mb-4 text-center">{{ livre.titre }}</h3>

                            <p><strong>Auteur :</strong> {{ livre.auteur }}</p>
                            <p><strong>Description :</strong> {{ livre.description }}</p>
                            <p><strong>Genre :</strong> {{ livre.genre }}</p>

                            <div class="mt-3">
                                {% if livre.fichierUrl %}
                                    <a href="{{ asset('uploads/files/' ~ livre.fichierUrl) }}" class="btn-action">Télécharger le fichier</a>
                                {% else %}
                                    <p class="text-muted">Aucun fichier disponible</p>
                                {% endif %}
                            </div>

                            <!-- Accéder Quiz Button (Only show if quiz has 10 questions) -->
                            {% if livre.quiz and livre.quiz.questions|length == 10 %}
                                <a href="{{ path('app_quiz_show', {'id': livre.quiz.id}) }}" class="btn-action">Accéder au Quiz</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </section>

    

        <div class="text-center mt-4">
            <a href="{{ path('app_livre_index') }}" class="back-btn">Retour</a>
        </div>
    </main>
{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles généraux de la page */
        body {
            background-color: #f8f9fa;
            font-family: 'Montserrat', sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .details-box {
            border: 1px solid #ddd;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 10px;
            background-color: #fff;
        }

        .back-btn {
            background-color: var(--primary-color);
            border: 0;
            border-radius: var(--border-radius-large) !important;
            color: var(--white-color);
            max-width: 150px;
            padding: 10px 20px;
            text-align: center;
            display: inline-block;
            text-decoration: none;
            margin: 20px auto;
        }

        .site-header {
            background-color: #3498db;
            padding: 100px 0;
            color: white;
        }

        .site-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
        }

        .topics-detail-block {
            border-radius: 12px;
            overflow: hidden;
        }

        .topics-detail-block img {
            width: 100%;
            height: auto;
        }

        /* Styles du formulaire */
        .custom-form {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            max-width: 800px;
            margin: 40px auto;
        }

        .custom-form:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .book-details-section {
            padding: 40px 0;
        }

        .btn-action, .back-btn {
            background-color: var(--primary-color);
            border: 0;
            border-radius: var(--border-radius-large) !important;
            color: var(--white-color);
            width: 250px;  /* Increased width */
            padding: 12px 24px; /* More padding for a balanced look */
            text-align: center;
            display: inline-block;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.3s ease;
            margin: 10px auto;
        }

        .btn-action:hover, .back-btn:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
        }

        .book-details-box {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .book-details-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .book-details-box p {
            font-size: 1rem;
            margin-bottom: 10px;
            color: #333;
        }

        .text-muted {
            color: #777;
        }

        .btn-back {
            background-color: #27ae60;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn-back:hover {
            background-color: #219653;
            transform: translateY(-2px);
        }

        .btn-quiz {
            background-color: #f39c12;
            color: white;
            border-radius: 8px;
            padding: 10px 20px;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn-quiz:hover {
            background-color: #e67e22;
            transform: translateY(-2px);
        }

        /* Styles pour les messages d'erreur */
        .error-message {
            color: #dc3545; /* Rouge pour les erreurs */
            font-size: 0.875rem; /* Taille de police plus petite */
            margin-top: 0.25rem; /* Espace au-dessus du message */
            display: none; /* Masqué par défaut */
        }

        .is-invalid {
            border-color: #dc3545 !important; /* Bordure rouge pour les champs invalides */
        }

        /* Ajustements pour les écrans mobiles */
        @media (max-width: 768px) {
            .custom-form {
                padding: 20px;
            }

            .form-floating .form-control {
                padding: 10px;
            }

            button.btn {
                padding: 10px 20px;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        // Function to show a popup alert when the quiz has 10 questions
        function showMaxQuestionsAlert() {
            alert("Vous ne pouvez pas ajouter plus de 10 questions à ce quiz.");
        }
    </script>
{% endblock %}