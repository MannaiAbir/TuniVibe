{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center">Register</h1>

                {# Display flash messages #}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                 </div>
                {% endfor %}

                {# Display form errors at the top #}
                {{ form_errors(registrationForm) }}

                {# Start the form #}
                {{ form_start(registrationForm, {'attr': {'class': 'mt-4'}}) }}

                    {# Render each form field #}
                    <div class="mb-3">
                        {{ form_row(registrationForm.username, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.email, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.numeroTelephone, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.adresse, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.roles, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword, {
                            'label': 'Password',
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_row(registrationForm.agreeTerms, {
                            'attr': {'class': 'form-check-input'},
                            'label_attr': {'class': 'form-check-label'}
                        }) }}
                    </div>

                    {# Submit button #}
                    <button type="submit" class="btn btn-primary w-100">Register</button>

                    {# Link to login page #}
                    <div class="mt-3 text-center">
                        <p>Already have an account? <a href="{{ path('app_login') }}">Log in here</a>.</p>
                    </div>

                {# End the form #}
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}