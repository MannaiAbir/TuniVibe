{# templates/editor/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <h1>User Details</h1>
    {% if user %}
        <p>Username: {{ user.username }}</p>
        <p>Email: {{ user.email }}</p>
        <p>Roles: {{ user.roles|join(', ') }}</p>
    {% else %}
        <p>No user data available.</p>
    {% endif %}
{% endblock %}