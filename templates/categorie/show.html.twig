

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>Détails de la Catégorie</h2>
        <p><strong>ID:</strong> {{ categorie.id }}</p>
        <p><strong>Nom:</strong> {{ categorie.nom }}</p>

        <a href="{{ path('categorie_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">Modifier</a>
    </div>
{% endblock %}
