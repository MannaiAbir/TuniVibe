{% extends 'base2.html.twig' %}

{% block title %}Événements publics{% endblock %}

{% block body %}
<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 15px;
        overflow: hidden;
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.15);
    }

    .card-img-top {
        transition: transform 0.4s ease;
        height: 200px;
        object-fit: cover;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    .card-title {
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        color: #2c3e50;
        min-height: 3rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .event-date {
        background: #4e73df;
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        display: inline-block;
        margin: -20px auto 15px;
        position: relative;
        z-index: 1;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .location-badge {
        background: rgba(78, 115, 223, 0.1);
        color: #4e73df !important;
        padding: 6px 12px;
        border-radius: 10px;
        font-size: 0.85rem;
    }

    .detail-btn {
        background: #4e73df;
        border: none;
        padding: 10px 25px;
        border-radius: 30px;
        font-weight: 500;
        transition: all 0.3s ease;
        width: auto;
        margin: 0 auto;
        display: block;
    }

    .detail-btn:hover {
        background: #375ab4;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(78, 115, 223, 0.3);
    }

    .empty-state {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 20px;
        padding: 2rem !important;
        border: none;
    }

    .empty-state i {
        font-size: 4rem;
        background: linear-gradient(45deg, #4e73df, #3b51b5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .card {
        animation: fadeIn 0.6s ease forwards;
    }
</style>

<div class="container py-5">
    <h1 class="text-center mb-5 display-4 fw-bold text-primary" style="font-family: 'Montserrat', sans-serif; text-shadow: 2px 2px 4px rgba(0,0,0,0.1);">
        Événements à venir
    </h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        {% for event in evenements %}
            <div class="col">
                <div class="card h-100 overflow-hidden">
                    <a href="{{ path('app_evenements_show', {'id': event.id}) }}" class="text-decoration-none">
                        <div class="ratio ratio-16x9">
                            <img 
                                src="{{ event.image starts with 'http' ? event.image : asset('uploads/events/' ~ event.image) }}" 
                                class="card-img-top"
                                alt="{{ event.titre }}"
                                loading="lazy"
                                onerror="this.onerror=null; this.src='{{ asset('img/default-event.jpg') }}'"
                            >
                        </div>
                    </a>
                    
                    <div class="card-body position-relative pt-4">
                        <div class="event-date">
                            <i class="fas fa-calendar-alt me-2"></i>
                            {{ event.dateDebut|date('d/m/Y à H\\hi') }}
                        </div>
                        
                        <h5 class="card-title mb-3">{{ event.titre }}</h5>
                        
                        <div class="location-badge">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            {{ event.lieu }}
                        </div>
                    </div>
                    
                    <div class="card-footer bg-transparent border-0 d-flex justify-content-center pb-4">
                        <a href="{{ path('app_evenements_show', {'id': event.id}) }}" class="detail-btn text-white text-decoration-none">
                            Voir les détails <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert empty-state text-center py-4">
                    <i class="fas fa-calendar-times mb-3"></i>
                    <h2 class="h4 mb-3">Aucun événement prévu pour le moment</h2>
                    <p class="mb-0 text-muted">Revenez plus tard pour découvrir nos prochains événements !</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}