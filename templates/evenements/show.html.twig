{% extends 'base2.html.twig' %}

{% block title %}Détails de l'événement{% endblock %}



{% block stylesheets %}
{{ parent() }}
<style>
    .event-header {
        position: relative;
        overflow: hidden;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .event-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 40%;
        background: linear-gradient(transparent, rgba(0,0,0,0.5));
    }

    .event-content {
        margin-top: -80px;
        transition: transform 0.3s ease;
    }

    .detail-card {
        background: rgba(255,255,255,0.95);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(0,0,0,0.08);
        transition: transform 0.3s ease;
    }

    .detail-card:hover {
        transform: translateY(-3px);
    }

    .activity-card {
        transition: all 0.3s cubic-bezier(0.4,0,0.2,1);
        cursor: pointer;
    }

    .activity-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,191,165,0.15);
    }

    @media (max-width: 768px) {
        .event-content {
            margin-top: -40px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="event-header mb-5" style="height: 500px;">
        <img src="{{ evenement.image ?? 'https://via.placeholder.com/1600x600' }}" 
             class="w-100 h-100 object-fit-cover" 
             alt="{{ evenement.titre }}"
             itemprop="image">
    </div>
    
    <div class="event-content bg-white p-4 p-lg-5 rounded-4 shadow-lg position-relative">
        <h1 class="mb-4 display-5 fw-bold" itemprop="name">{{ evenement.titre }}</h1>
        
        <div class="row g-4 mb-5">
            <div class="col-md-6 col-lg-4">
                <div class="detail-card p-3 rounded-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-calendar-alt text-primary fs-3 me-3"></i>
                        <div>
                            <div class="text-muted small">Début</div>
                            <div class="fw-bold">{{ evenement.dateDebut|date('d/m/Y H:i') }}</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-lg-4">
                <div class="detail-card p-3 rounded-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-calendar-times text-danger fs-3 me-3"></i>
                        <div>
                            <div class="text-muted small">Fin</div>
                            <div class="fw-bold">{{ evenement.dateFin|date('d/m/Y H:i') }}</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 col-lg-4">
                <div class="detail-card p-3 rounded-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-map-marker-alt text-success fs-3 me-3"></i>
                        <div>
                            <div class="text-muted small">Lieu</div>
                            <div class="fw-bold">{{ evenement.lieu }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="mapid" style="height: 400px; width: 100%;"></div>

        <div class="mb-5" itemprop="description">
            <h4 class="mb-3 fw-semibold">Description</h4>
            <p class="lead text-muted lh-lg">{{ evenement.description|raw }}</p>
        </div>

        <div class="bg-light p-4 p-lg-5 rounded-4">
            <h4 class="mb-4 fw-semibold"><i class="fas fa-tasks me-2"></i>Activités associées</h4>
            
            {% if evenement.activites is not empty %}
                <div class="row g-4">
                    {% for activite in evenement.activites %}
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="activity-card card shadow-sm h-100 border-start border-3 border-success">
                                <div class="card-body">
                                    <h5 class="card-title text-success fw-semibold">{{ activite.nom }}</h5>
                                    <p class="card-text text-muted">{{ activite.description }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info mt-3 rounded-3">
                    Aucune activité n'est associée à cet événement
                </div>
            {% endif %}
        </div>

        <div class="d-flex gap-3 mt-5 flex-wrap justify-content-center justify-content-md-start">
            <a href="{{ path('app_evenements_public') }}" 
               class="btn btn-lg btn-outline-secondary px-4 py-2 rounded-3">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>

            <a href="{{ path('app_rejoindre_evenement', {'id': evenement.id}) }}" 
               class="btn btn-lg btn-success text-white px-4 py-2 rounded-3 shadow-sm">
               <i class="fas fa-user-plus me-2"></i>Rejoindre l'événement
            </a>

           
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Liste des coordonnées des 24 gouvernorats de Tunisie
        var villes = {
            "ariana": { lat: 36.8665, lon: 10.1647 },
            "béja": { lat: 36.7333, lon: 9.1833 },
            "ben Arous": { lat: 36.7435, lon: 10.2314 },
            "bizerte": { lat: 37.2744, lon: 9.8739 },
            "gabès": { lat: 33.8815, lon: 10.0982 },
            "gafsa": { lat: 34.425, lon: 8.7842 },
            "jendouba": { lat: 36.5011, lon: 8.7757 },
            "kairouan": { lat: 35.6781, lon: 10.0963 },
            "kasserine": { lat: 35.1672, lon: 8.8368 },
            "kébili": { lat: 33.7076, lon: 8.9715 },
            "kef": { lat: 36.167, lon: 8.7047 },
            "mahdia": { lat: 35.5046, lon: 11.0622 },
            "manouba": { lat: 36.8101, lon: 10.0963 },
            "médenine": { lat: 33.3547, lon: 10.5055 },
            "monastir": { lat: 35.7643, lon: 10.8113 },
            "nabeul": { lat: 36.4511, lon: 10.7352 },
            "sfax": { lat: 34.739, lon: 10.7599 },
            "sidi Bouzid": { lat: 35.0382, lon: 9.4854 },
            "siliana": { lat: 36.0833, lon: 9.3667 },
            "sousse": { lat: 35.8254, lon: 10.6360 },
            "tataouine": { lat: 32.9333, lon: 10.4500 },
            "tozeur": { lat: 33.9197, lon: 8.1336 },
            "tunis": { lat: 36.8065, lon: 10.1815 },
            "zaghouan": { lat: 36.4029, lon: 10.1429 }
        };

        // Récupérer le lieu de l'événement depuis Twig
        var lieu = "{{ evenement.lieu|escape('js') }}"; 

        // Vérifier si la ville existe dans la liste, sinon prendre les coordonnées de l'événement ou par défaut
        var latitude, longitude;
        if (villes[lieu]) {
            latitude = villes[lieu].lat;
            longitude = villes[lieu].lon;
        } else {
            latitude = {{ evenement.latitude ?? 36.8665 }};
            longitude = {{ evenement.longitude ?? 10.1647 }};
        }

        // Initialiser la carte avec les coordonnées obtenues
        var map = L.map('mapid').setView([latitude, longitude], 10);

        // Ajouter OpenStreetMap comme fond de carte
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        // Ajouter un marqueur à l'emplacement de l'événement
        L.marker([latitude, longitude]).addTo(map)
            .bindPopup('{{ evenement.titre|escape("js") }}')
            .openPopup();
    });
</script>


{% endblock %}