{% extends 'base2.html.twig' %}

{% block title %}Recherche d'événements{% endblock %}

{% block body %}
<style>
    /* Style général pour la page */
    .container {
        max-width: 1200px;
    }
    h1 {
        color: #2c3e50;
        text-align: center;
    }
    /* Styles pour le formulaire de recherche */
    form {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }
    form label {
        font-weight: 500;
        color: #4e73df;
    }
    form input.form-control {
        border: 1px solid #ced4da;
        border-radius: 5px;
    }
    form button.btn {
        background-color: #4e73df;
        border-color: #4e73df;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }
    form button.btn:hover {
        background-color: #375ab4;
        transform: translateY(-2px);
    }
    /* Styles pour la liste des événements */
    #events-list .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    #events-list .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }
    #events-list .card-img-top {
        height: 200px;
        object-fit: cover;
    }
    #events-list .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #2c3e50;
    }
    #events-list .card-text {
        font-size: 0.95rem;
        color: #6c757d;
    }
    #events-list .card-footer a {
        font-weight: 500;
        transition: color 0.3s ease;
    }
    #events-list .card-footer a:hover {
        color: #4e73df;
    }
</style>

<div class="container py-5">
    <h1 class="mb-4">Recherche d'événements</h1>

    {# Formulaire de recherche #}
    <form method="GET" action="{{ path('event_ajax_search') }}" class="mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="titre" class="form-label">Titre</label>
                <input type="text" name="titre" id="titre" class="form-control" placeholder="Titre de l'événement" value="{{ app.request.query.get('titre') }}">
            </div>
            <div class="col-md-4">
                <label for="lieu" class="form-label">Lieu</label>
                <input type="text" name="lieu" id="lieu" class="form-control" placeholder="Lieu" value="{{ app.request.query.get('lieu') }}">
            </div>
        </div>
        <div class="mt-3 text-end">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
    </form>

    {# Affichage de la liste des événements #}
    <div id="events-list">
        {% if evenements is not empty %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for event in evenements %}
                    <div class="col">
                        <div class="card h-100">
                            <img src="{{ event.image starts with 'http' ? event.image : asset('uploads/events/' ~ event.image) }}" class="card-img-top" alt="{{ event.titre }}" loading="lazy"
                                 onerror="this.onerror=null;this.src='{{ asset('img/default-event.jpg') }}'">
                            <div class="card-body">
                                <h5 class="card-title">{{ event.titre }}</h5>
                                <p class="card-text">
                                    <small class="text-muted">
                                        Le {{ event.dateDebut|date('d/m/Y') }} à {{ event.dateDebut|date('H\\hi') }}
                                    </small>
                                    <br>
                                    <i class="fas fa-map-marker-alt"></i> {{ event.lieu }}
                                </p>
                            </div>
                            <div class="card-footer">
                                <a href="{{ path('app_evenements_show', {'id': event.id}) }}" class="btn btn-outline-primary btn-sm">
                                    Voir les détails
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center">Aucun événement trouvé.</p>
        {% endif %}
    </div>
</div>
{% endblock %}

