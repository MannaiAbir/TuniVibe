            line-height: 1.4;
        }

        .text-gradient {
            display: block;
            font-size: 2.2em;
            font-weight: 800;
            background: linear-gradient(45deg, #007bff 0%, #00a8ff 100%);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 2px 4px rgba(0,123,255,0.15);
            margin-bottom: 1rem;
            letter-spacing: -0.5px;
            animation: textSlide 1s ease both;
        }

        .subtext {
            display: inline-block;
            font-size: 1.1em;
            color: #4a5568;
            font-weight: 500;
            max-width: 500px;
            line-height: 1.6;
            position: relative;
            padding: 0 20px;
        }

        .subtext::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, #007bff 0%, #00a8ff 100%);
            border-radius: 2px;
            animation: lineExpand 0.8s 0.3s ease both;
        }

        /* Bouton CTA */
