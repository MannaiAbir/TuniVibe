{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <a href="{{ path('app_article_new') }}" class="btn btn-primary mb-3">Ajouter un article</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Image</th>
                <th>Créé le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td><img src="{{ asset(article.image) }}" alt="{{ article.title }}" style="width: 100px; height: auto; border-radius: 5px;"></td>
                    <td>{{ article.createdAt|date('d/m/Y H:i') }}</td>
                    <td>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('app_article_comments', {'id': article.id}) }}" class="btn btn-secondary btn-sm">Voir les commentaires</a>

                    
                        <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                            <button class="btn btn-danger btn-sm" type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun article trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <style>
        /* CSS pour personnaliser l'apparence de la table */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        table th, table td {
            text-align: center;
            padding: 12px;
        }

        table th {
            background-color:rgb(172, 204, 238);
            color: white;
        }

        table td {
            background-color: #f9f9f9;
        }

        /* Ajout d'un peu de marge aux boutons */
        .btn {
            margin: 5px;
        }

        /* Style pour les images */
        img {
            border-radius: 5px;
            max-width: 100px;
        }

        /* Style pour les lignes de la table */
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:nth-child(odd) {
            background-color: #ffffff;
        }

        /* Affichage d'un message quand il n'y a pas d'article */
        .text-center {
            font-size: 16px;
            font-weight: bold;
        }
    </style>

{% endblock %}
