{% extends 'base.html.twig' %}

{% block header %}
    <header class="site-header d-flex flex-column justify-content-center align-items-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-12">
                    <h2 class="text-white">Liste des Vlogs</h2>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}

    <!-- Section CTA avec texte et bouton -->
    <div class="cta-container">
        <div class="cta-box">
            <div class="cta-content">
                <p class="invitation-text">
                    <span class="text-gradient">Partage ton aventure !</span>
                    <span class="subtext">Si tu as une expérience unique à raconter,<br>notre communauté a hâte de la découvrir</span>
                </p>
                <a href="{{ path('app_article_new') }}" class="btn-add-article">
                    <span class="btn-text">Publier un article</span>
                    <div class="btn-gradient"></div>
                </a>
            </div>
        </div>
    </div>

    <!-- Liste des articles -->
    <div class="articles-container">
        {% for article in articles %}
            {% if article.status == 'published' %}
                <div class="article-card">
                    <img src="{{ asset(article.image) }}" alt="{{ article.title }}" class="article-image">
                    <div class="article-content">
                        <h3>{{ article.title }}</h3>
                        <p class="article-date">Publié le : {{ article.createdAt|date('d/m/Y H:i') }}</p>
                        <div class="article-actions">
                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn-action btn-view">Voir</a>
                            <a href="{{ path('app_article_commenter', {'id': article.id}) }}" class="btn-action btn-comment">Commenter</a>
                            <a href="{{ path('app_article_comments', {'id': article.id}) }}" class="btn-action btn-comments">Voir les commentaires</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% else %}
            <p class="no-articles">Aucun article trouvé</p>
        {% endfor %}
    </div>

    <style>
        /* Styles de base */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        h1 {
            font-size: 2.5em;
            font-weight: 700;
            color: #007bff;
            margin-bottom: 2rem;
        }

        /* Section CTA */
        .cta-container {
            max-width: 800px;
            margin: 2rem auto 4rem;
            padding: 0 20px;
        }

        .cta-box {
            background: linear-gradient(145deg, rgba(255,255,255,0.95) 0%, rgba(245,248,250,0.95) 100%);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 
                0 8px 32px rgba(0, 123, 255, 0.1),
                inset 0 -2px 4px rgba(255,255,255,0.5),
                inset 0 2px 4px rgba(255,255,255,0.5);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,0.3);
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .cta-box:hover {
            transform: translateY(-5px);
            box-shadow: 
                0 12px 40px rgba(0, 123, 255, 0.15),
                inset 0 -2px 6px rgba(255,255,255,0.6),
                inset 0 2px 6px rgba(255,255,255,0.6);
        }

        .cta-content {
            position: relative;
            z-index: 2;
            text-align: center;
        }

        /* Texte CTA */
        .invitation-text {
            margin-bottom: 2rem;
            line-height: 1.4;
        }

        .text-gradient {
            display: block;
            font-size: 2.2em;
            font-weight: 800;
            background: linear-gradient(45deg, #007bff 0%, #00a8ff 100%);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 2px 4px rgba(0,123,255,0.15);
            margin-bottom: 1rem;
            letter-spacing: -0.5px;
            animation: textSlide 1s ease both;
        }

        .subtext {
            display: inline-block;
            font-size: 1.1em;
            color: #4a5568;
            font-weight: 500;
            max-width: 500px;
            line-height: 1.6;
            position: relative;
            padding: 0 20px;
        }

        .subtext::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, #007bff 0%, #00a8ff 100%);
            border-radius: 2px;
            animation: lineExpand 0.8s 0.3s ease both;
        }

        /* Bouton CTA */
        .btn-add-article {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: 1rem 2.5rem;
            font-size: 1.1em;
            font-weight: 600;
            border-radius: 50px;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
            transform: translateZ(0);
            border: none;
            color: white;
        }

        .btn-gradient {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, #007bff 0%, #00a8ff 100%);
            z-index: -1;
            transition: opacity 0.4s ease;
        }

        .btn-add-article::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 70%);
            transform: translate(-50%, -50%);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .btn-add-article:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 8px 25px rgba(0, 123, 255, 0.3);
        }

        .btn-add-article:hover::before {
            opacity: 1;
        }

        .btn-text {
            position: relative;
            z-index: 2;
            letter-spacing: 0.5px;
        }

        /* Liste des articles */
        .articles-container {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            justify-content: center;
            padding: 20px;
        }

        .article-card {
            width: 350px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            position: relative;
        }

        .article-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }

        .article-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: transform 0.3s ease-in-out;
        }

        .article-card:hover .article-image {
            transform: scale(1.1);
        }

        .article-content {
            padding: 20px;
            text-align: center;
            background: linear-gradient(to bottom, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 1));
            position: relative;
            z-index: 1;
        }

        .article-content h3 {
            margin-bottom: 15px;
            font-size: 1.4em;
            color: #333;
            font-weight: 600;
        }

        .article-date {
            font-size: 0.9em;
            color: #777;
            margin-bottom: 15px;
        }

        .article-actions {
            margin-top: 15px;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .btn-action {
            display: inline-block;
            padding: 8px 16px;
            font-size: 0.9em;
            font-weight: 500;
            color: #fff;
            border: none;
            border-radius: 20px;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
        }

        .btn-view {
            background: linear-gradient(45deg, #17a2b8, #1bc8e0);
        }

        .btn-comment {
            background: linear-gradient(45deg, #28a745, #34ce57);
        }

        .btn-comments {
            background: linear-gradient(45deg, #6c757d, #8e9ba7);
        }

        .no-articles {
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            color: #666;
            margin-top: 50px;
        }

        /* Animations */
        @keyframes textSlide {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes lineExpand {
            from {
                width: 0;
                opacity: 0;
            }
            to {
                width: 60px;
                opacity: 1;
            }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .cta-box {
                padding: 1.5rem;
            }

            .text-gradient {
                font-size: 1.8em;
            }

            .subtext {
                font-size: 1em;
                padding: 0 10px;
            }

            .article-card {
                width: 100%;
                max-width: 400px;
            }

            .article-actions {
                flex-direction: column;
                gap: 5px;
            }

            .btn-action {
                width: 100%;
            }
        }
    </style>
{% endblock %}