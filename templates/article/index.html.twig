{% extends 'base.html.twig' %}

{% block header %}
    <header class="site-header d-flex flex-column justify-content-center align-items-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-12">
                    <h2 class="text-white">Liste des Vlogs</h2>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}


 <!-- Instruction Text for Search -->
    <div class="search-instruction">
        <p>Faites la recherche d'un article par nom ou catégorie </p>
    </div>


<!-- Formulaire de recherche -->
<form method="get" action="{{ path('app_article_list') }}">
    <input type="text" name="search" placeholder="Rechercher par nom, catégorie ou date" class="search-input">
    
    <!-- Filtrer par catégorie avec une liste déroulante -->
    <select name="category" class="search-category">
        <option value="">Sélectionner une catégorie</option>
        <option value="voyage">Voyage</option>
        <option value="experience_sociale">Expérience sociale</option>
        <option value="experience_culturelle">Expérience culturelle</option>
        <option value="art">Art</option>
        <option value="other">Autre</option>
    </select>
    
    <button type="submit" class="btn-search">Rechercher</button>
</form>



    <!-- Section CTA avec texte et bouton -->
    <div class="cta-container">
        <div class="cta-box">
            <div class="cta-content">
                <p class="invitation-text">
                    <span class="text-gradient">Partage ton aventure !</span>
                    <span class="subtext">Si tu as une expérience unique à raconter,<br>notre communauté a hâte de la découvrir</span>
                </p>
                <a href="{{ path('app_article_new') }}" class="btn-add-article">
                    <span class="btn-text">Publier un article</span>
                    <div class="btn-gradient"></div>
                </a>
            </div>
        </div>
    </div>



    <!-- Liste des articles -->
    <div class="articles-container">
        {% for article in articles %}
            {% if article.status == 'published' %}
                <div class="article-card">
                    <img src="{{ asset(article.image) }}" alt="{{ article.title }}" class="article-image">
                    <div class="article-content">
                        <h3>{{ article.title }}</h3>
                        <p class="article-date">Publié le : {{ article.createdAt|date('d/m/Y H:i') }}</p>
                        <div class="article-actions">
                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn-action btn-view">Voir</a>
                            <a href="{{ path('app_article_commenter', {'id': article.id}) }}" class="btn-action btn-comment">Commenter</a>
                            <a href="{{ path('app_article_comments', {'id': article.id}) }}" class="btn-action btn-comments">Voir les commentaires</a>
                              <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn-action btn-edit">Modifier</a>

<form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn-action btn-delete" type="submit">Supprimer</button>
</form>

                        </div>
                    </div>
                </div>

            {% endif %}
        {% else %}
            <p class="no-articles">Aucun article trouvé</p>
        {% endfor %}
    </div>








