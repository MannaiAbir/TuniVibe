{% extends 'base4.html.twig' %}

{% block body %}
    <h2>Statistiques des Articles et Commentaires par Catégorie</h2>

    <canvas id="articlesChart" style="max-height: 600px; max-width: 1000px;"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var categories = JSON.parse('{{ categories|raw }}');
            var articleCounts = JSON.parse('{{ articleCounts|raw }}');
            var commentCounts = JSON.parse('{{ commentCounts|raw }}');

            var ctx = document.getElementById('articlesChart').getContext('2d');
            var chart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: categories,
                    datasets: [
                        {
                            label: 'Nombre d\'articles',
                            data: articleCounts,
                            backgroundColor: 'rgba(54, 162, 235, 0.6)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Nombre de commentaires',
                            data: commentCounts,
                            backgroundColor: 'rgba(255, 99, 132, 0.6)',
                            borderColor: 'rgba(255, 99, 132, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                // Début des modifications
                                callback: function(value) {
                                    if (Number.isInteger(value)) {
                                        return value;
                                    }
                                },
                                stepSize: 1,
                                precision: 0
                                // Fin des modifications
                            },
                            title: {
                                display: true,
                                text: 'Quantité'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Catégories'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        // Ajout pour les tooltips
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + Math.round(context.parsed.y);
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}