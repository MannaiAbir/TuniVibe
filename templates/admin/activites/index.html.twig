{% extends 'baseadmin.html.twig' %}

{% block title %}Gestion des activités{% endblock %}

{% block stylesheets %}
    <style>
        /* Style général de la page */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Style du titre */
        h1 {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Style du tableau */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .table thead {
            background-color: rgb(18, 19, 19);
            color: white;
        }

        .table th,
        .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table th {
            font-weight: bold;
        }

        .table tbody tr {
            border-bottom: 1px solid #e0e0e0;
            transition: background-color 0.3s ease;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .table tbody tr:last-child {
            border-bottom: none;
        }

        /* Style du bouton Supprimer */
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            padding: 8px 16px;
            font-size: 0.9rem;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

        /* Style du message "Aucune activité trouvée" */
        .table tbody tr td[colspan="3"] {
            text-align: center;
            color: #6c757d;
            font-style: italic;
            padding: 20px;
        }

        /* Espacement */
        .mb-4 {
            margin-bottom: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des activités</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for activite in activites %}
                <tr>
                    <td>{{ activite.nom }}</td>
                    <td>{{ activite.description }}</td>
                    <td>
                        <form method="post" action="{{ path('admin_activites_delete', {'id': activite.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette activité ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activite.id) }}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune activité trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
