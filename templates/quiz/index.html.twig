{% extends 'base.html.twig' %}

{% block title %}Quizzes{% endblock %}

{% block stylesheets %}
    <style>
        /* General styles for the page */
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #2c3e50;
            font-size: 2.5rem;
            margin-bottom: 25px;
            font-weight: 700;
            text-align: center;
        }

        /* Quiz Grid Styling */
        .quiz-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .quiz-card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .quiz-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .quiz-card h3 {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: #3498db;
        }

        .quiz-card .actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .quiz-card .actions a {
            padding: 8px 16px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 0.9rem;
            transition: background-color 0.3s ease;
        }

        .quiz-card .actions a.btn-primary {
            background-color: #3498db;
            color: white;
        }

        .quiz-card .actions a.btn-primary:hover {
            background-color: #2980b9;
        }

        .quiz-card .actions a.btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .quiz-card .actions a.btn-secondary:hover {
            background-color: #5a6268;
        }

        /* No Records Styling */
        .no-records {
            text-align: center;
            color: #777;
            font-style: italic;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            margin-top: 20px;
        }

        /* Create New Button */
        .create-new-btn {
            text-align: center;
            margin-top: 30px;
        }

        .create-new-btn a {
            padding: 10px 20px;
            background-color: #27ae60;
            color: white;
            border-radius: 6px;
            text-decoration: none;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .create-new-btn a:hover {
            background-color: #219653;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Quizzes</h1>

        <div class="quiz-grid">
            {% for quiz in quizzes %}
                <div class="quiz-card">
                    <h3>Quiz #{{ quiz.id }}</h3>
                    <div class="actions">
                        <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-primary">Show</a>
                        <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            {% else %}
                <div class="no-records">
                    <p>No quizzes found</p>
                </div>
            {% endfor %}
        </div>

        <div class="create-new-btn">
            <a href="{{ path('app_quiz_new') }}">Create New Quiz</a>
        </div>
    </div>
{% endblock %}
