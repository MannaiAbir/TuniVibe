{% extends 'base.html.twig' %}

{% block title %}Détails de l'activité{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Détails de l'activité</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activite.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activite.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activites_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_activites_edit', {'id': activite.id}) }}" class="btn btn-warning">Modifier</a>
</div>
{% endblock %}