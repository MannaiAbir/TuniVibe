{% extends 'base2.html.twig' %}

{% block title %}Modifier une activité{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #48bb78;
            --secondary-color: #63b3ed;
        }

        body {
            background: linear-gradient(135deg, #f7fafc 0%, #ebf4ff 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .activity-card {
            max-width: 600px;
            margin: 40px auto;
            background: white;
            border-radius: 16px;
            box-shadow: 
                0 4px 6px rgba(0, 0, 0, 0.05),
                0 20px 25px -5px rgba(0, 0, 0, 0.1);
            padding: 40px;
            transform: translateY(0);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-left: 4px solid var(--primary-color);
        }

        .activity-card:hover {
            transform: translateY(-4px);
            box-shadow: 
                0 10px 15px -3px rgba(0, 0, 0, 0.1),
                0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        h1 {
            font-size: 24px;
            color: #2d3748;
            margin-bottom: 28px;
            font-weight: 700;
            position: relative;
            padding-left: 28px;
        }

        h1::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 8px;
            height: 80%;
            background: var(--primary-color);
            border-radius: 4px;
        }

        .form-group {
            margin-bottom: 24px;
            position: relative;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #4a5568;
            font-weight: 500;
            font-size: 14px;
            transform-origin: left center;
            transition: all 0.3s ease;
        }

        input, textarea {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #f8fafc;
        }

        input:focus, textarea:focus {
            background: white;
            border-color: var(--secondary-color);
            box-shadow: 
                0 0 0 4px rgba(99, 179, 237, 0.2),
                0 2px 6px rgba(99, 179, 237, 0.1);
        }

        textarea {
            resize: vertical;
            min-height: 120px;
            line-height: 1.6;
        }

        .button-container {
            display: flex;
            gap: 12px;
            margin-top: 40px;
        }

        .btn-validate {
            background: var(--primary-color);
            color: white;
            padding: 14px 28px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: 
                transform 0.2s ease,
                box-shadow 0.2s ease,
                background 0.2s;
            letter-spacing: 0.5px;
        }

        .btn-validate:hover {
            background: #38a169;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(72, 187, 120, 0.3);
        }

        .btn-validate:active {
            transform: translateY(0);
        }

        .btn-cancel {
            background: #f1f5f9;
            color: #64748b;
            padding: 14px 28px;
            border-radius: 8px;
            text-decoration: none;
            transition: all 0.2s ease;
            border: 2px solid #e2e8f0;
        }

        .btn-cancel:hover {
            background: #e2e8f0;
            border-color: #cbd5e1;
            transform: translateY(-2px);
        }

        @keyframes floating {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-8px); }
            100% { transform: translateY(0px); }
        }

        /* Petit effet magique au chargement */
        .activity-card {
            animation: cardEntrance 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        @keyframes cardEntrance {
            from {
                opacity: 0;
                transform: translateY(40px) scale(0.95);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="activity-card">
        <h1>Modifier une activité</h1>

        {{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {
                    'class': 'form-control',
                    'rows': 5,
                    'style': 'padding: 14px;'
                }}) }}
            </div>

            <div class="button-container">
                <button type="submit" class="btn-validate">
                    <span>✅ Valider</span>
                </button>
                <a href="{{ path('app_activites_index') }}" class="btn-cancel">
                    <span>❌ Annuler</span>
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}