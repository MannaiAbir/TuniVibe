{% extends 'base2.html.twig' %}

{% block title %}Liste des Activités{% endblock %}

{% block body %}
    <div class="container-xl">
        <div class="page-header">
            <h1><i class="fas fa-running me-2"></i>Liste des Activités</h1>
           
        </div>

        {% if activites|length > 0 %}
            <div class="activity-grid">
                {% for activite in activites %}
                    <div class="activity-card">
                        <h3>{{ activite.nom }}</h3>
                        <p>{{ activite.description }}</p>
                        <div class="action-buttons">
                            <a href="{{ path('app_activites_edit', {'id': activite.id}) }}" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                                Modifier
                            </a>
                            <form method="post" 
                                  action="{{ path('app_activites_delete', {'id': activite.id}) }}" 
                                  onsubmit="return confirm('Êtes-vous sûr ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activite.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                    Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle fa-3x mb-3"></i>
                <p>Aucune activité trouvée</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
