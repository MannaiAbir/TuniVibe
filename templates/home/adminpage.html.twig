{% extends 'baseadmin.html.twig' %}



    {% block body %}
           
 <div class="row">
                            <div class="col-xl-6">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <i class="fas fa-chart-area me-1"></i>
                                        Area Chart Example
                                    </div>
                                    <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <i class="fas fa-chart-bar me-1"></i>
                                        Bar Chart Example
                                    </div>
                                    <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
                                </div>
                            </div>
                        </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nom et Prenom</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>RÃ´le</th>
                <th>Mot de passe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for i in users %}
            <tr>
                <td>{{ i.username }}</td>
                <td>{{ i.email }}</td>
                <td>{{ i.adresse }}</td>
                <td>{{ i.roles|join(', ') }}</td>
                <td>{{ i.password }}</td>
                <td>
                    <a href="{{ path('app_editadmin', {'id': i.id}) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path('app_deleteadmin', {'id': i.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}